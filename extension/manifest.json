{
  "name": "CoWIN Pro",
  "version": "3.0.1",
  "description": "The User Experience Enhancer for India's Co-WIN App.",
  "author" : "Kumar P",
  "manifest_version": 2,

  "content_scripts": [{
    "matches": ["https://selfregistration.cowin.gov.in/*", "https://www.cowin.gov.in/*", "https://cowin.gov.in/*"],
    "js": [ "xlib/jquery-3.6.0.min.js",
            "xlib/CryptoJSv3.1.2-core.min.js",
            "xlib/CryptoJSv3.1.2-aes.min.js",
            "main.min.js"],
    "css": ["main.min.css"],
    "run_at": "document_end"
  }],

  "icons" : {
    "16" : "icons/icon16.png",
    "48" : "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "16" : "icons/icon16.png",
      "48" : "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title" : "CoWin Pro: The UX Enhancer",
    "default_popup" : "main.min.html"
  }
}